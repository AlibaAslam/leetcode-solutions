#include <string>
#include <algorithm>
#include <cctype>

class Solution {
private:
    bool isLetter(char c) {
        return std::isalpha(c);
    }

public:
    std::string reverseOnlyLetters(std::string s) {
        int left = 0;
        int right = s.length() - 1;

        while (left < right) {
            while (left < right && !isLetter(s[left])) {
                left++;
            }
            while (left < right && !isLetter(s[right])) {
                right--;
            }

            if (left < right) {
                std::swap(s[left], s[right]);
                left++;
                right--;
            }
        }

        return s;
    }
};
