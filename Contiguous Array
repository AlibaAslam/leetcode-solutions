#include <vector>
#include <unordered_map>
#include <algorithm>

class Solution {
public:
    int findMaxLength(std::vector<int>& nums) {
        std::unordered_map<int, int> sum_to_index;
        
        sum_to_index[0] = -1;

        int max_length = 0;
        int running_sum = 0;

        for (int i = 0; i < nums.size(); ++i) {
            if (nums[i] == 1) {
                running_sum += 1;
            } else {
                running_sum += -1;
            }

            if (sum_to_index.count(running_sum)) {
                int previous_index = sum_to_index[running_sum];
                int current_length = i - previous_index;
                max_length = std::max(max_length, current_length);
            } else {
                sum_to_index[running_sum] = i;
            }
        }

        return max_length;
    }
};
