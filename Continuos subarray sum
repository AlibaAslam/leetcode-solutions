#include <bits/stdc++.h>
using namespace std;

class Solution {
public:
    bool checkSubarraySum(vector<int>& nums, int k) {
        unordered_map<int, int> rem;
        rem[0] = -1;
        long long sum = 0;
        for (int i = 0; i < nums.size(); ++i) {
            sum += nums[i];
            if (k != 0) sum %= k;
            if (rem.count(sum)) {
                if (i - rem[sum] > 1) return true;
            } else rem[sum] = i;
        }
        return false;
    }
};
