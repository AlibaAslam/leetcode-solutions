#include <vector>

class Solution {
public:
    int subarraysDivByK(std::vector<int>& nums, int k) {
        std::vector<int> remainder_counts(k, 0);
        remainder_counts[0] = 1;

        int prefix_sum = 0;
        int count = 0;

        for (int num : nums) {
            prefix_sum += num;
            
            int remainder = prefix_sum % k;
            if (remainder < 0) {
                remainder += k;
            }
            
            count += remainder_counts[remainder];
            remainder_counts[remainder]++;
        }

        return count;
    }
};
